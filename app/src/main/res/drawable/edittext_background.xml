<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set background color -->
    <solid android:color="@color/white" />

    <!-- Add border -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Add rounded corners -->
    <corners android:radius="8dp" />

    <!-- Add some padding -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
</shape>