<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- About RemotePresence Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About RemotePresence"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"/>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mission & Vision Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#EDF6FF"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Mission"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To empower people to complete personal, emotional, and practical tasks in Lahore through a seamless, human-first service that brings convenience, connection, and care to every errand — no matter how big, small, or unique."
                    android:textSize="14sp"
                    android:fontFamily="@font/interregular"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Vision"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To become the most trusted and emotionally intelligent local task execution network in Pakistan, allowing anyone, anywhere, to experience real-world presence with zero friction."
                    android:textSize="14sp"
                    android:fontFamily="@font/interregular"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- What Makes Us Different Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#6AAB8C94"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What Makes Us Different"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppinssemibold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/interregular"
                    android:text="• Unlimited Task - Not limited to food or products"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/interregular"
                    android:text="• Emotion-Driven Execution – Personal notes, kindness, extra touches"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/interregular"
                    android:text="• Real Humans, Real Presence – No bots. No guesswork."
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/interregular"
                    android:text="• Proof, Transparency,  Trust – Task evidence provided"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/interregular"
                    android:text="• Personal Service – Direct contact with task executor"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contact Us Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Contact Us Header with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/ivContactIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/email"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvContactHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- Contact Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Phone Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/ivPhoneIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+92 300 "
                            android:fontFamily="@font/interregular"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- WhatsApp -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/ivWhatsappIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/chat"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvWhatsappLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WhatsApp:"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvWhatsappNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+92 300 "
                            android:fontFamily="@font/interregular"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivLocationIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/location"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lahore, Pakistan"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/whatsappBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center"
                        android:background="@drawable/helpbtnwhatsapp">

                        <ImageView
                            android:id="@+id/ivWhatsappBtnIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/chat"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvWhatsappBtnText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat on WhatsApp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp"/>

                    <LinearLayout
                        android:id="@+id/callBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center"
                        android:background="@drawable/helpbtncall">

                        <ImageView
                            android:id="@+id/ivCallBtnIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvCallBtnText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call On\n Phone"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>