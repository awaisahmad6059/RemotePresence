<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/taskCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/cardMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardviewcolor"
        android:padding="16dp">

        <!-- Task Title and Status in same row -->
        <LinearLayout
            android:id="@+id/titleStatusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/taskdetailTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send birthday cake to mom"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinssemibold" />

            <com.google.android.material.chip.Chip
                android:id="@+id/statusChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Compiled"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/btncolor"
                app:chipCornerRadius="16dp"
                app:chipStrokeWidth="1dp"/>
        </LinearLayout>

        <!-- Location and Time -->
        <LinearLayout
            android:id="@+id/locationTimeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/locationIconImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/location"/>

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DHA Phase 5"
                android:textColor="@color/white"
                android:fontFamily="@font/interregular"
                android:textSize="14sp"/>

            <View
                android:id="@+id/dividerView"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/btncolor"/>

            <ImageView
                android:id="@+id/timeIconImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/clock"/>

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textColor="@color/white"
                android:fontFamily="@font/interregular"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>